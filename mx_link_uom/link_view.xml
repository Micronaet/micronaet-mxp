<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_product_uom_link_form">
            <field name="name">product.uom.form</field>
            <field name="model">product.uom</field>
            <field name="inherit_id" ref="product.product_uom_form_view"/>
            <field name="arch" type="xml">
                <field name="active" position="after">
                    <field name="account_ref" />
                </field>
            </field>
        </record>
        <record model="ir.ui.view" id="view_product_uom_link_tree">
            <field name="name">product.uom.tree</field>
            <field name="model">product.uom</field>
            <field name="inherit_id" ref="product.product_uom_tree_view"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="account_ref" />
                </field>
            </field>
        </record>
    </data>
</openerp>

