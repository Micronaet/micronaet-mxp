<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_mrp_bom_derived_form">
            <field name="name">mrp.bom.form</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
            <field name="arch" type="xml">
                <field name="type" position="after">
                    <field name="from_bom_id"/>
                    <button name="load_from_parent" colspan="2" string="Load from parent" type="object" icon="gtk-refresh" attrs="{'invisible':[('from_bom_id','=',False)]}" confirm="Load will delete current bom and populate with parent elements"/>
                </field>                
            </field>
        </record>
    </data>
</openerp>

